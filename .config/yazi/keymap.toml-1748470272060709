[[manager.prepend_keymap]]
on   = [ "u" ]
run = """  shell --confirm 'subl "$@"'  """
desc = "Open file in sublime text"

[[manager.prepend_keymap]]
on = [ "<C-n>" ]
run = '''
         shell 'ripdrag "$@" -x 2>/dev/null &' --confirm
         ''' 
desc = "activate ripdrag thing"

