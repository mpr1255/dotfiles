[manager]
ratio          = [ 1, 3, 4 ]
#ratio          = [ 1, 4, 3 ]
sort_by        = "mtime"
sort_sensitive = false
sort_dir_first = false
sort_reverse   = true
show_hidden    = false
show_symlink   = true
linemode = "file_info"

[preview]
wrap = "yes"
tab_size = 2

